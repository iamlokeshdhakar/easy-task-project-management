<div class="r-right">
  <div class="rr-top">
    <div class="profile">
      <div class="dp">
        <div class="edit-avatar">
          <i class="ri-image-add-fill"></i>
          <form style="display: none;" id="avatar-form" action="/avatar" method="post" enctype="multipart/form-data">
            <input type="file" name="avatar" id="avatar" accept="image/png, image/jpeg, image/jpg">
          </form>
        </div>
        <img src="../images/uploads/<%=user.profilePic%>" alt="">
      </div>
      <h4>
        <%=user.firstName +" "+ user.lastName%></h4>
      <h6><%= user.designation%></h6>
    </div>
    <div class=" task-num">
          <div class="tn">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>

          </div>
          <div class="tn">
            <h5>
              <%=user.updates.toDoTask + user.updates.inProgress%>
            </h5>
          </div>
          <div class="tn">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
          </div>
          <p>Task to complete</p>
    </div>
  </div>
  <div class="rr-bottom">
    <div class="team-div">
      <div class="td-head">
        <h3>Your Team</h3>
      </div>
      <div class="td-team-list">
        <%if(user.projectDetails.length> 0){%>
          <% user.projectDetails[0].teamMember.forEach(function(member){ %>
            <div class="team">
              <div class="team-dp">
                <img src="../images/uploads/<%=member.profilePic%>" alt="">
              </div>
              <div class="team-name">
                <h5>
                  <%=member.firstName +" "+ member.lastName%></h5>
            <h6><%=member.designation%></h6>
          </div>
          <div class=" team-chat">
                    <a href="/discussion">
                      <i class="ri-message-3-fill"></i>
                    </a>
              </div>
            </div>
            <% }) %>
              <%}else {%>
                <h4 style="color: white; text-align: center; margin-top: 40%; font-size: 1.2vw;">You don't <br> have any
                  team.</h4>
                <%}%>

      </div>
    </div>
  </div>
</div>